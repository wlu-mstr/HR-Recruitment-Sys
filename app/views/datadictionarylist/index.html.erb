<div class="portlet box yellow">
	<div class="portlet-title">
		<div class="caption">
			<i class="ico-table"></i>Data Dictionary
		</div>
		<div class="tools">
			<a href="javascript:;" class="collapse"></a>
			<a href="javascript:;" class="reload"></a>
			<a href="javascript:;" class="remove"></a>
		</div>
	</div>

	<div class="portlet-body">


<!-- <p>Find me in app/views/datadictionarylist/index.html.erb</p> -->

<table class="table table-striped table-bordered table-hover" id="sample_2">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>


<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<% @data_dictionaries.each do |datadictionary| %>
	<tr>
		<td>
			<%= link_to datadictionary.name, data_dictionaries_path(:dictid => datadictionary.parent_code, :dictname => datadictionary.name) %>
		</td>	
		<td><%=sanitize datadictionary.description %></td>
	</tr>
<% end %>

</table>

</div>
</div>
